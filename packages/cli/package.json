{
	"name": "@sizium/cli",
	"version": "0.0.8",
	"description": "Get the actual size of any local or remote package",
	"keywords": [
		"bin",
		"cli",
		"package",
		"pigeonposse",
		"pkg-size",
		"pp",
		"size"
	],
	"homepage": "https://sizium.pigeonposse.com/guide/cli",
	"bugs": {
		"url": "https://github.com/pigeonposse/sizium/issues",
		"email": "dev@pigeonposse.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/pigeonposse/sizium/",
		"directory": "packages/cli"
	},
	"funding": {
		"type": "individual",
		"url": "https://pigeonposse.com/?popup=donate"
	},
	"license": "GPL-3.0",
	"author": {
		"name": "Angelo",
		"email": "angelo@pigeonposse.com",
		"url": "https://github.com/angelespejo"
	},
	"type": "module",
	"exports": {
		".": {
			"import": {
				"types": "./dist/main.d.mts",
				"default": "./dist/main.mjs"
			},
			"require": {
				"types": "./dist/main.d.cts",
				"default": "./dist/main.cjs"
			}
		}
	},
	"main": "dist/main.cjs",
	"module": "dist/main.mjs",
	"types": "dist/main.d.ts",
	"bin": {
		"sizium": "dist/bin.mjs"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "pnpm build:lib",
		"build:bin": "binarium -c build.binarium.js node",
		"build:lib": "unbuild",
		"dev": "tsx src/main.ts"
	},
	"dependencies": {
		"@sizium/core": "workspace:*",
		"picocolors": "1.1.1"
	},
	"devDependencies": {
		"@sizium/repo-config": "workspace:*"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	}
}
