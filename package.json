{
	"name": "sizium-repo",
	"private": true,
	"description": "Get the actual size of any local or remote package",
	"keywords": [
		"pp",
		"pigeonposse",
		"cli",
		"pkg-size",
		"package",
		"size",
		"api",
		"library"
	],
	"homepage": "https://sizium.pigeonposse.com",
	"bugs": {
		"url": "https://github.com/pigeonposse/sizium/issues",
		"email": "dev@pigeonposse.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/pigeonposse/sizium"
	},
	"funding": {
		"type": "individual",
		"url": "https://pigeonposse.com/?popup=donate"
	},
	"license": "GPL-3.0",
	"author": {
		"name": "Angelo",
		"email": "angelo@pigeonposse.com",
		"url": "https://github.com/angelespejo"
	},
	"type": "module",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"+": "run() { pnpm -F @sizium/\"${@:1}\"; }; run $@",
		"++": "run() { pnpm -F \"${@:1}\"; }; run $@",
		".": "dovenv",
		"lint": "eslint src",
		"prepare": "dovenv git husky --silent",
		"test": "pnpm run --sequential \"/test:.*/\"",
		"test:e2e": "playwright test",
		"test:unit": "vitest run src --passWithNoTests"
	},
	"devDependencies": {
		"@changesets/changelog-github": "0.5.0",
		"@changesets/cli": "2.27.11",
		"@dovenv/core": "1.1.5",
		"@dovenv/theme-pigeonposse": "1.1.5",
		"@types/node": "22.10.5",
		"binarium": "2.0.5",
		"tslib": "2.8.1",
		"tsx": "4.19.2",
		"typescript": "5.7.3",
		"unbuild": "^3.2.0",
		"vite": "6.0.7",
		"vite-plugin-dts": "4.5.0",
		"vitest": "2.1.8"
	},
	"packageManager": "pnpm@9.11.0",
	"engines": {
		"node": ">=20.0.0",
		"pnpm": ">=8.10.0"
	},
	"extra": {
		"id": "sizium",
		"productName": "sizium",
		"shortDesc": "Get the actual size of any local or remote package",
		"action": "Find the true size of an npm package",
		"libraryUrl": "https://www.npmjs.com/package/@sizium/core",
		"licenseUrl": "https://github.com/pigeonposse/sizium/blob/main/LICENSE",
		"changelogUrl": "https://github.com/pigeonposse/sizium/blob/main/packages/core/CHANGELOG.md",
		"contributingUrl": "https://github.com/pigeonposse/.github/blob/main/CONTRIBUTING.md",
		"libraryId": "@sizium/core",
		"repoId": "sizium",
		"rawRepoUrl": "https://raw.githubusercontent.com/pigeonposse/sizium",
		"docsUrl": "https://sizium.pigeonposse.com",
